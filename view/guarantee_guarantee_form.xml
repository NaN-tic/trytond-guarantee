<form string="Guarantee">
    <label name="party"/>
    <field name="party"/>
    <label name="code"/>
    <field name="code"/>
    <label name="document"/>
    <field name="document"/>
    <label name="type"/>
    <field name="type"/>
    <group id="dates" colspan="4" col="6">
        <label name="start_date"/>
        <field name="start_date"/>
        <label name="end_date"/>
        <field name="end_date"/>
        <label name="in_guarantee"/>
        <field name="in_guarantee"/>
    </group>
    <notebook colspan="4">
        <page name="sale_lines" col="2">
            <field name="sale_lines"/>
            <field name="guarantee_sale_lines"/>
        </page>
        <page name="invoice_lines" col="2">
            <field name="invoice_lines"/>
            <field name="guarantee_invoice_lines"/>
        </page>
        <page name="notes">
            <field name="notes" colspan="4"/>
        </page>
    </notebook>
    <group col="4" colspan="4" id="contract_buttons">
        <label name="state" xalign="1.0" xexpand="1"/>
        <field name="state" xalign="1.0" xexpand="0"/>
        <group col="7" colspan="2" id="buttons">
            <button name="cancel" string="Cancel" icon="tryton-cancel"/>
            <button name="draft" string="Draft" icon="tryton-go-previous"/>
            <button name="active" string="Active" icon="tryton-go-next"/>
            <button name="finish" string="Finish" icon="tryton-ok"/>
        </group>
    </group>
</form>
